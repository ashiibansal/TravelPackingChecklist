<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/INDIGO" /> <!-- Change this to any color -->

    <!-- Completely rounded edges -->
    <corners android:radius="100dp" /> <!-- Larger radius = more rounded -->

    <!-- Optional padding inside -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="6dp"
        android:bottom="6dp" />
</shape>